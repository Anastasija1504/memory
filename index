<!-- –ï–∫—Ä–∞–Ω —Ä–µ–∑—É–ª—å—Ç–∞—Ç—ñ–≤ -->
<div class="container hidden" id="result-screen">
    <h2>–í—ñ—Ç–∞—î–º–æ! üéâ –í–∏ –ø—Ä–æ–π—à–ª–∏ –≤—Å—ñ —Ä—ñ–≤–Ω—ñ!</h2>
    <p id="res-name"></p>
    <p id="res-time"></p>
    <p id="res-moves"></p>
</div>

<script>
    // ---------------- –ù–ê–õ–ê–®–¢–£–í–ê–ù–ù–Ø –ì–†–ò ----------------
    const TOTAL_LEVELS = 6;
    const baseCardsCount = 8;      // –Ω–∞ 1 —Ä—ñ–≤–Ω—ñ
    const cardsIncrement = 4;      // +4 –∫–∞—Ä—Ç–∫–∏ –Ω–∞ –∫–æ–∂–Ω–æ–º—É –Ω–∞—Å—Ç—É–ø–Ω–æ–º—É

    const icons = [
        "‚úàÔ∏è","‚òÇÔ∏è","üöÄ","üòÄ","üê±","‚≠ê","‚öΩ","üçé",
        "üéß","üìö","üöó","üåà","üé≤","üèÄ","üéÅ"
    ];

    // ---------------- –°–¢–ê–ù –ì–†–ò ----------------
    let playerName = "";
    let currentLevel = 0;
    let cards = [];
    let openCards = [];
    let matchedPairs = 0;
    let moves = 0;

    let timerId = null;
    let totalSeconds = 0;

    // ---------------- DOM –ï–õ–ï–ú–ï–ù–¢–ò ----------------
    const startScreen = document.getElementById("start-screen");
    const gameScreen  = document.getElementById("game-screen");
    const startBtn    = document.getElementById("start-btn");
    const playerInput = document.getElementById("player-name");
    const gridEl      = document.getElementById("grid");

    const levelLabel  = document.getElementById("level-label");
    const matchesLabel= document.getElementById("matches-label");
    const movesLabel  = document.getElementById("moves-label");
    const topLevel    = document.getElementById("top-level");
    const topTime     = document.getElementById("top-time");

    const resultScreen = document.getElementById("result-screen");
    const resName  = document.getElementById("res-name");
    const resTime  = document.getElementById("res-time");
    const resMoves = document.getElementById("res-moves");

    // ---------------- –î–û–ü–û–ú–Ü–ñ–ù–Ü –§–£–ù–ö–¶–Ü–á ----------------
    function shuffle(arr) {
        for (let i = arr.length - 1; i > 0; i--) {
            const j = Math.floor(Math.random() * (i + 1));
            [arr[i], arr[j]] = [arr[j], arr[i]];
        }
        return arr;
    }

    function formatTime(seconds) {
        const m = Math.floor(seconds / 60);
        const s = seconds % 60;
        const mm = m < 10 ? "0" + m : m;
        const ss = s < 10 ? "0" + s : s;
        return mm + ":" + ss;
    }

    function startTimer() {
        if (timerId !== null) return; // –≤–∂–µ –∑–∞–ø—É—â–µ–Ω–∏–π
        timerId = setInterval(() => {
            totalSeconds++;
            topTime.textContent = formatTime(totalSeconds);
        }, 1000);
    }

    function stopTimer() {
        if (timerId !== null) {
            clearInterval(timerId);
            timerId = null;
        }
    }

    // ---------------- –õ–û–ì–Ü–ö–ê –†–Ü–í–ù–Ü–í ----------------
    function startGame() {
        startScreen.classList.add("hidden");
        gameScreen.classList.remove("hidden");
        resultScreen.classList.add("hidden");

        currentLevel = 1;
        totalSeconds = 0;
        moves = 0;
        topLevel.textContent = currentLevel;
        topTime.textContent = "00:00";
        startTimer();
        initLevel();
    }

    function initLevel() {
        const cardsCount = baseCardsCount + (currentLevel - 1) * cardsIncrement;
        const pairsCount = cardsCount / 2;

        const levelIcons = icons.slice(0, pairsCount);
        cards = shuffle([...levelIcons, ...levelIcons]);

        openCards = [];
        matchedPairs = 0;

        levelLabel.textContent   = currentLevel;
        matchesLabel.textContent = matchedPairs + " / " + pairsCount;
        movesLabel.textContent   = moves;
        topLevel.textContent     = currentLevel;

        gridEl.innerHTML = "";
        cards.forEach((icon, index) => {
            const cardEl = document.createElement("div");
            cardEl.className = "card";
            cardEl.dataset.index = index;
            cardEl.textContent = "";     // –ø—Ä–∏—Ö–æ–≤–∞–Ω–∏–π —Å–∏–º–≤–æ–ª
            gridEl.appendChild(cardEl);
        });
    }

    function revealCard(index) {
        const cardEls = gridEl.querySelectorAll(".card");
        const cardEl = cardEls[index];

        if (!cardEl || cardEl.classList.contains("matched") || cardEl.classList.contains("open")) {
            return;
        }
        if (openCards.length === 2) return;

        cardEl.classList.add("open");
        cardEl.textContent = cards[index];
        openCards.push({ index, value: cards[index], el: cardEl });

        if (openCards.length === 2) {
            moves++;
            movesLabel.textContent = moves;
            checkMatch();
        }
    }

    function disableAllCards(disabled) {
        const cardEls = gridEl.querySelectorAll(".card");
        cardEls.forEach(c => {
            if (disabled) c.classList.add("disabled");
            else c.classList.remove("disabled");
        });
    }

    function checkMatch() {
        disableAllCards(true);
        const [first, second] = openCards;

        if (first.value === second.value) {
            first.el.classList.remove("open");
            second.el.classList.remove("open");
            first.el.classList.add("matched");
            second.el.classList.add("matched");

            matchedPairs++;
            const totalPairs = cards.length / 2;
            matchesLabel.textContent = matchedPairs + " / " + totalPairs;

            openCards = [];
            disableAllCards(false);

            if (matchedPairs === totalPairs) {
                setTimeout(nextLevelOrFinish, 500);
            }
        } else {
            setTimeout(() => {
                first.el.classList.remove("open");
                second.el.classList.remove("open");
                first.el.textContent = "";
                second.el.textContent = "";
                openCards = [];
                disableAllCards(false);
            }, 700);
        }
    }

    function nextLevelOrFinish() {
        if (currentLevel < TOTAL_LEVELS) {
            currentLevel++;
            initLevel();
        } else {
            stopTimer();

            const finalTime = totalSeconds;
            const timeString = formatTime(finalTime);

            gameScreen.classList.add("hidden");
            resultScreen.classList.remove("hidden");

            resName.textContent  = playerName ? `–£—á–∞—Å–Ω–∏–∫: ${playerName}` : "–£—á–∞—Å–Ω–∏–∫: ‚Äî";
            resTime.textContent  = `–ß–∞—Å: ${timeString}`;
            resMoves.textContent = `–°–ø—Ä–æ–±: ${moves}`;

            // –ö–æ–Ω—Ñ–µ—Ç—ñ üéâ
            shootConfetti();

            // –í—ñ–¥–ø—Ä–∞–≤–∫–∞ —Ä–µ–∑—É–ª—å—Ç–∞—Ç—ñ–≤ —É —á–∞—Ç-–±–æ—Ç / –±–µ–∫–µ–Ω–¥
            sendResultsToChatbot(playerName, finalTime, moves);
        }
    }

    // ---------------- –ö–û–ù–§–ï–¢–Ü ----------------
    function shootConfetti() {
        if (typeof confetti !== "function") return;

        const duration = 2.5 * 1000;
        const end = Date.now() + duration;

        (function frame() {
            confetti({
                particleCount: 6,
                startVelocity: 25,
                spread: 360,
                ticks: 70,
                origin: { x: Math.random(), y: Math.random() - 0.2 }
            });

            if (Date.now() < end) {
                requestAnimationFrame(frame);
            }
        })();
    }

    // ---------------- –Ü–ù–¢–ï–ì–†–ê–¶–Ü–Ø –ó –ß–ê–¢-–ë–û–¢–û–ú ----------------
    function sendResultsToChatbot(name, timeSeconds, movesCount) {
        // TODO: —Ç—É—Ç —Ä–µ–∞–ª—ñ–∑—É—î—à –≤—ñ–¥–ø—Ä–∞–≤–∫—É –¥–∞–Ω–∏—Ö —É —Å–≤—ñ–π —á–∞—Ç-–±–æ—Ç.
        // –ù–∞–ø—Ä–∏–∫–ª–∞–¥, —á–µ—Ä–µ–∑ fetch –Ω–∞ —Å–≤—ñ–π —Å–µ—Ä–≤–µ—Ä –∞–±–æ Telegram API.
        console.log("–†–µ–∑—É–ª—å—Ç–∞—Ç–∏ —Ç–µ—Å—Ç—É:", { name, timeSeconds, movesCount });
    }

    // ---------------- –û–ë–†–û–ë–ö–ê –ü–û–î–Ü–ô ----------------
    startBtn.addEventListener("click", () => {
        playerName = playerInput.value.trim();
        if (!playerName) {
            if (!confirm("–Ü–º‚Äô—è –Ω–µ –≤–∫–∞–∑–∞–Ω–æ. –ü—Ä–æ–¥–æ–≤–∂–∏—Ç–∏ –±–µ–∑ —ñ–º–µ–Ω—ñ?")) {
                return;
            }
        }
        startGame();
    });

    gridEl.addEventListener("click", (e) => {
        const cardEl = e.target.closest(".card");
        if (!cardEl) return;
        const index = parseInt(cardEl.dataset.index, 10);
        revealCard(index);
    });
</script>
</body>
</html>
